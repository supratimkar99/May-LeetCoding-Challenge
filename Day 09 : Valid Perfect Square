//Given a positive integer num, write a function which returns True if num is a perfect square else False.

class Solution {
    
    public boolean isPerfectSquare(int num) {
        if(num == 1)
            return true;
        
        //to shorten the searching bracket
        
       /* int digits=0,t=num,d,n=1;
        while(t>0)
        {
            digits++;
            t = t/10;
        }
        if(digits%2 == 0)
            d = digits/2;
        else
            d = (digits+1)/2;
        for(int i=0; i<d-1; i++)
            n = n * 10;*/
        
        
        for(int i=2; i<=num/2; i++)
        {
            if(i*i == num)
                return true;
            if(i*i>num)
                return false;
        }
        return false;
    }
}
